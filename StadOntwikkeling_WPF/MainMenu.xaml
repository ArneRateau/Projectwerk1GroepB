<Window x:Class="StadOntwikkeling_WPF.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadOntwikkeling_WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainMenu" Height="600" Width="1000">
    <Grid>
        <TextBlock Foreground="#009DE0" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,150" >Welkom, gebruiker!</TextBlock>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center">Wat wenst u te doen?</TextBlock>
		<Button x:Name="Bekijk" Content="Bekijk projecten" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="200" Margin="0,400,450,0" Background="#009DE0" Foreground="White" BorderBrush="#009DE0" FontSize="20" Click="BekijkProjecten_Click"/>
		<Button x:Name="MaakProject" Content="Maak nieuw project" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="200" Margin="0,400,0,0" Background="#009DE0" Foreground="White" BorderBrush="#009DE0" FontSize="20" Click="MaakProject_Click"/>
		<Button x:Name="addGebruiker" Content="Maak gebruiker" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="200" Margin="450,400,0,0" Background="#009DE0" Foreground="White" BorderBrush="#009DE0" FontSize="20" Click="MaakGebruiker_Click"/>
	</Grid>
</Window>