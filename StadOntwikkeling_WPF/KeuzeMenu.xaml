<Window x:Class="StadOntwikkeling_WPF.KeuzeMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadOntwikkeling_WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="KeuzeMenu" Height="600" Width="1000">
    <Grid>
        <TextBlock Foreground="#009DE0" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,150" >Welk type(s) project is uw nieuwe project?</TextBlock>
        <CheckBox x:Name="StadsOntwikkeling" Content="StadsOntwikkelings Project" VerticalAlignment="Center" Foreground="#009DE0" FontSize="20" Margin="365,0,0,0"></CheckBox>
        <CheckBox x:Name="GroeneRuimte" Content="Groene Ruimte Project" VerticalAlignment="Center" Foreground="#009DE0" FontSize="20" Margin="365,60,0,0"></CheckBox>
        <CheckBox x:Name="InnovatiefWonen" Content="Innovatief Wonen Project" VerticalAlignment="Center" Foreground="#009DE0" FontSize="20" Margin="365,120,0,0"></CheckBox>
        <Button x:Name="gaVerder" Content="ga verder" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="200" Margin="0,400,0,0" Background="#009DE0" Foreground="White" BorderBrush="#009DE0" FontSize="20" ></Button>
    </Grid>
</Window>
