<Window x:Class="StadOntwikkeling_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadOntwikkeling_WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="StadsOntwikkelingen" Height="600" Width="1000">
    <Grid>
        <TextBlock Foreground="#009DE0" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,150" >Welkom!</TextBlock>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center">Emailadres</TextBlock>
        <TextBox x:Name="Email" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Margin="0,100,0,0" Height="50" FontSize="25" Foreground="#009DE0"></TextBox>
        <Button x:Name="Login" Content="Login" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="200" Margin="0,400,0,0" Background="#009DE0" Foreground="White" BorderBrush="#009DE0" FontSize="20" ></Button>
    </Grid>
</Window>
