<Window x:Class="StadOntwikkeling_WPF.CreataProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadOntwikkeling_WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="CreateProject" Height="800" Width="1000">
    <Grid>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,25,0,150" >Voer algemene projectgegevens in.</TextBlock>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,75,875,0 ">Titel:</TextBlock>
        <TextBox x:Name="Titel" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350" Margin="0,75,400,0" FontSize="20" Foreground="#009DE0"></TextBox>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="150,75,0,0 ">Status:</TextBlock>
        <ComboBox Name="status" VerticalAlignment="Top" HorizontalAlignment="Center" Width="150" FontSize="20" Margin="450,75,0,0" Foreground="#009DE0">
            <ComboBoxItem>Planning</ComboBoxItem>
            <ComboBoxItem>Uitvoering</ComboBoxItem>
            <ComboBoxItem>Afgerond</ComboBoxItem>
        </ComboBox>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="115,175,0,150" >Startdatum:</TextBlock>
        <Calendar HorizontalAlignment="Center" VerticalAlignment="Top" Margin="450,150,0,0"/>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,125,875,0 ">Wijk:</TextBlock>
        <TextBox x:Name="Wijk" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350" Margin="0,125,400,0" FontSize="20" Foreground="#009DE0"></TextBox>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,175,875,0 ">Straat:</TextBlock>
        <TextBox x:Name="Straat" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350" Margin="0,175,400,0" FontSize="20" Foreground="#009DE0"></TextBox>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,225,875,0 ">Gemeente:</TextBlock>
        <TextBox x:Name="Gemeente" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350" Margin="0,225,400,0" FontSize="20" Foreground="#009DE0"></TextBox>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,275,860,0 ">Postcode:</TextBlock>
        <TextBox x:Name="Postcode" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Margin="0,275,650,0" FontSize="20" Foreground="#009DE0"></TextBox>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,275,400,0 ">Huisnummer:</TextBlock>
        <TextBox x:Name="Huisnummer" VerticalAlignment="Top" HorizontalAlignment="Center" Width="50" Margin="0,275,200,0" FontSize="20" Foreground="#009DE0"></TextBox>
        <TextBlock Foreground="#009DE0" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,325,850,0 ">Beschrijving:</TextBlock>
        <TextBox x:Name="Beschrijving" VerticalAlignment="Top" HorizontalAlignment="Center" Width="650" Height="350" Margin="0,325,25,0" FontSize="12" Foreground="#009DE0"></TextBox>
        <Button x:Name="CreeerProject" Content="Creeer" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="200" Margin="425,685,0,0" Background="#009DE0" Foreground="White" BorderBrush="#009DE0" FontSize="20"/>

    </Grid>
</Window>
