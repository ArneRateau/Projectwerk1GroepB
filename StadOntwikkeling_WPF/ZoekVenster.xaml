<Window x:Class="StadOntwikkeling_WPF.ZoekVenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ZoekVenster" Height="550" Width="950">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">

            <TextBox x:Name="TxtNaam" Width="150" Margin="0,0,10,0"
                     ToolTip="Projectnaam" />

            <TextBox x:Name="TxtWijk" Width="150" Margin="0,0,10,0"
                     ToolTip="Wijk" />

            <ComboBox x:Name="CmbType" Width="160" Margin="0,0,10,0">
                <ComboBoxItem Content="Stadsontwikkeling"/>
                <ComboBoxItem Content="Groene Ruimte"/>
                <ComboBoxItem Content="Innovatief Wonen"/>
            </ComboBox>

            <ComboBox x:Name="CmbStatus" Width="150" Margin="0,0,10,0">
                <ComboBoxItem Content="Planning"/>
                <ComboBoxItem Content="Uitvoering"/>
                <ComboBoxItem Content="Afgerond"/>
            </ComboBox>

            <DatePicker x:Name="DpStart" Width="140" Margin="0,0,10,0"/>
            <DatePicker x:Name="DpEinde" Width="140" Margin="0,0,10,0"/>

            <Button Content="Zoek" Width="90" Height="35"
                    Background="#007ACC" Foreground="White"
                    Click="BtnZoek_Click"/>
        </StackPanel>

        <DataGrid x:Name="DgResultaten"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Titel}" Width="2*" />
                <DataGridTextColumn Header="Wijk" Binding="{Binding Locatie.Wijk}" Width="1.2*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="1*" />
                <DataGridTextColumn Header="StartDatum" Binding="{Binding StartDatum}" Width="1.2*" />
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
