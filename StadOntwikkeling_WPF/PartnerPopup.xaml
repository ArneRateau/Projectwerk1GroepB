<Window x:Class="StadOntwikkeling_WPF.PartnerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Partner toevoegen" Height="260" Width="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Grid>

        <!-- Header balk -->
        <Border Background="#009DE0" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Partner toevoegen"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"/>
        </Border>

        <!-- Inhoud -->
        <StackPanel Margin="20,60,20,20">

            <!-- Naam partner -->
            <TextBlock Text="Naam partner:"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="TxtNaam" Height="26" TextChanged="TxtNaam_TextChanged"/>

            <!-- Rol -->
            <TextBlock Text="Rol in project:"
                       FontWeight="Bold"
                       Margin="0,15,0,5"/>
            <TextBox x:Name="TxtRol" Height="26"/>

            <!-- Knoppen rij -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,25,0,0">
                <Button Content="OK"
                        Width="80"
                        Height="25"
                        Margin="0,0,10,0"
                        Click="BtnOk_Click">
                    <Button.Background>
                        <SolidColorBrush Color="#009DE0"/>
                    </Button.Background>
                    <Button.Foreground>
                        <SolidColorBrush Color="White"/>
                    </Button.Foreground>
                </Button>

                <Button Content="Annuleer"
                        Width="80"
                        Height="25"
                        Click="BtnAnnuleer_Click"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
