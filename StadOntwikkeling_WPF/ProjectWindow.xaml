<Window x:Class="StadOntwikkeling_WPF.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadOntwikkeling_WPF"
        mc:Ignorable="d"
        Title="ProjectWindow" Height="800" Width="800">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Margin="0 15 0 30"
                   Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Edit Project"
                   HorizontalAlignment="Center"
                   FontSize="30"
                   Foreground="#009DE0"/>

        <!-- Column Headers -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Huidige waardes"
                   HorizontalAlignment="Center"
                   FontSize="15" Foreground="#009DE0"/>

        <TextBlock Grid.Row="1" Grid.Column="1"
                   Text="Nieuwe waardes"
                   HorizontalAlignment="Center"
                   FontSize="15" Foreground="#009DE0"/>


        <!-- ===========================
             HUIDIGE WAARDES (LEFT)
        =========================== -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">

            <!-- ID -->
                <Label Content="Id:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Id" />

            <!-- Titel -->
                <Label Content="Titel:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Titel"/>

            <!-- StartDatum -->
                <Label Content="Start Datum:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Datum"/>

            <!-- Status -->
                <Label Content="Status:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Status"/>

            <!-- Beschrijving -->
                <Label Content="Beschrijving:" FontWeight="Bold"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="120">
                <TextBlock x:Name="TextBlock_Beschrijving"
                           TextWrapping="Wrap"/>
            </ScrollViewer>

            <!-- LOCATIE -->
            <Label Content="Locatie:" FontWeight="ExtraBold" Margin="0,10,0,5"/>

                <Label Content="Straat:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Locatie_Straat"/>

                <Label Content="Huisnummer:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Locatie_Huisnummer"/>

                <Label Content="Postcode:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Locatie_Postcode"/>

                <Label Content="Gemeente:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Locatie_Gemeente"/>

                <Label Content="Wijk:" FontWeight="Bold"/>
            <TextBlock x:Name="TextBlock_Locatie_Wijk"/>

        </StackPanel>


        
        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">

          
            <Label Content="Id:"/>
            <TextBox x:Name="TextBox_New_Id" IsReadOnly="True"/>

            <!-- Titel -->
            <Label Content="Titel:"/>
            <TextBox x:Name="TextBox_New_Titel"/>

            <!-- StartDatum -->
            <Label Content="Start Datum:"/>
            <DatePicker x:Name="DatePicker_New_Datum"/>

            <!-- Status -->
            <Label Content="Status:"/>
            <ComboBox x:Name="ComboBox_New_Status">
                <ComboBoxItem Content="Planning"/>
                <ComboBoxItem Content="Uitvoering"/>
                <ComboBoxItem Content="Afgerond"/>
            </ComboBox>

            <!-- Beschrijving (large text area) -->
            <Label Content="Beschrijving:"/>
            <TextBox x:Name="TextBox_New_Beschrijving"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Height="120"/>

            <!-- LOCATIE (split inputs) -->
            <Label Content="Locatie:" FontWeight="Bold" Margin="0,10,0,5"/>

            <Label Content="Straat:"/>
            <TextBox x:Name="TextBox_New_Straat"/>

            <Label Content="Huisnummer:"/>
            <TextBox x:Name="TextBox_New_Huisnummer"/>

            <Label Content="Postcode:"/>
            <TextBox x:Name="TextBox_New_Postcode"/>

            <Label Content="Gemeente:"/>
            <TextBox x:Name="TextBox_New_Gemeente"/>

            <Label Content="Wijk:"/>
            <TextBox x:Name="TextBox_New_Wijk"/>

        </StackPanel>


        <!-- ===========================
             PARTNERS SECTION
             (BOTTOM, 2 COLUMNS)
        =========================== -->
        <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- CURRENT PARTNERS -->
            <StackPanel Grid.Column="0" Margin="10">
                <Label Content="Huidige Partners"
                       Foreground="#009DE0"
                       FontSize="18"/>
                <ListBox x:Name="ListBox_Partners_Current"
                         Height="180"/>
            </StackPanel>

            <!-- ALL OTHER PARTNERS -->
            <StackPanel Grid.Column="1" Margin="10">
                <Label Content="Alle Overige Partners"
                       Foreground="#009DE0"
                       FontSize="18"/>
                <ListBox x:Name="ListBox_Partners_All"
                         Height="180" MouseDoubleClick="ListBox_Partners_All_MouseDoubleClick"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Grid.ColumnSpan="2"
                        Margin="5">

                <Button Click="Button_PartnerKoppelen"
                        Content="Partners Koppelen"
                        Margin="5"
                        Background="#009DE0"
                        Foreground="White"/>

                <Button Click="Button_Opslaan"
                        Content="Opslaan"
                        Margin="5"
                        Background="#009DE0"
                        Foreground="White"/>
            </StackPanel>

        </Grid>

    </Grid>
    </ScrollViewer>
</Window>
