<Window x:Class="StadOntwikkeling_WPF.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadOntwikkeling_WPF"
        mc:Ignorable="d"
        Title="ProjectWindow" Height="800" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<TextBlock Margin="0 15 0 30" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Edit Project" HorizontalAlignment="Center" FontSize="30" Foreground="#009DE0" FontWeight="Medium"/>
		<TextBlock Grid.Row="1" Grid.Column="0" Text="Huidige waardes" HorizontalAlignment="Center" FontSize="15" Foreground="#009DE0"/>
		<TextBlock Grid.Row="1" Grid.Column="1" Text="Nieuwe waardes" HorizontalAlignment="Center" FontSize="15" Foreground="#009DE0"/>

		<Grid Grid.Row="2" Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<Label Content="Id:" Grid.Row="0" Grid.Column="0"/>
			<TextBlock x:Name="TextBlock_Id" IsEnabled="False" Grid.Row="0" Grid.Column="1" />

			<Label Content="Titel:" Grid.Row="1" Grid.Column="0"/>
			<TextBlock x:Name="TextBlock_Titel" IsEnabled="False" Grid.Row="1" Grid.Column="1" />

			<Label Content="Start Datum:" Grid.Row="2" Grid.Column="0"/>
			<TextBlock x:Name="TextBlock_Datum" IsEnabled="False" Grid.Row="2" Grid.Column="1" />

			<Label Content="Status:" Grid.Row="3" Grid.Column="0"/>
			<ComboBox x:Name="ComboBox_Status" IsEnabled="False" Grid.Row="3" Grid.Column="1" >
				<ComboBoxItem Content="Planning"/>
				<ComboBoxItem Content="Uitgevoerd"/>
				<ComboBoxItem Content="Afgerond"/>
			</ComboBox>

			<Label Content="Beschrijving:"  Grid.Row="4" Grid.Column="0"/>
			<TextBlock x:Name="TextBlock_Beschrijving" IsEnabled="False" Grid.Row="4" Grid.Column="1" />

			<Label Content="Locatie:"  Grid.Row="5" Grid.Column="0"/>
			<Button Click="Button_View_Locatie" Content="View" Grid.Row="5" Grid.Column="1" Background="#009DE0" Foreground="white"/>
		</Grid>

		<Grid Grid.Row="2" Grid.Column="1" Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<Label Content="Id:" Grid.Row="0" Grid.Column="0"/>
			<TextBlock x:Name="TextBlock_Nieuwe_Id" IsEnabled="False" Grid.Row="0" Grid.Column="1" Margin="5"/>

			<Label Content="Titel:" Grid.Row="1" Grid.Column="0"/>
			<TextBlock x:Name="TextBlock_Nieuwe_Titel" Grid.Row="1" Grid.Column="1" Margin="5"/>

			<Label Content="Start Datum:" Grid.Row="2" Grid.Column="0"/>
			<DatePicker x:Name="DatePicker_Nieuwe_Datum" Grid.Row="2" Grid.Column="1" Margin="5"/>

			<Label Content="Status:" Grid.Row="3" Grid.Column="0"/>
			<ComboBox x:Name="ComboBox_Nieuwe_Status" Grid.Row="3" Grid.Column="1" Margin="5">
				<ComboBoxItem Content="Planning"/>
				<ComboBoxItem Content="Uitgevoerd"/>
				<ComboBoxItem Content="Afgerond"/>
			</ComboBox>

			<Label Content="Beschrijving:"  Grid.Row="4" Grid.Column="0"/>
			<TextBlock x:Name="TextBlock_Nieuwe_Beschrijving" Grid.Row="4" Grid.Column="1" Margin="5"/>

			<Label Content="Locatie:" Grid.Row="5" Grid.Column="0"/>
			<Button Click="Button_Nieuwe_Locatie" Content="View" Grid.Row="5" Grid.Column="1" Background="#009DE0" Foreground="white" Margin="5" Padding="3"/>
		</Grid>

		<Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<Label Content="Huidige Partners"  Foreground="#009DE0" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" FontSize="20"/>
			<ListBox x:Name="ListBox_Partners" Grid.Row="1" Grid.ColumnSpan="3" Margin="10"/>

			<Button Click="Button_PartnerKoppelen" Content="Partners Koppelen" Grid.Row="2" Grid.Column="1" Margin="5" Background="#009DE0" Foreground="White"/>
			<Button Click="Button_Opslaan" Content="Opslaan" Grid.Row="2" Grid.Column="2" Margin="5" Background="#009DE0" Foreground="White"/>
		</Grid>
	</Grid>
</Window>
