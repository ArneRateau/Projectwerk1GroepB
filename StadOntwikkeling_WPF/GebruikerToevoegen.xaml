<Window x:Class="StadOntwikkeling_WPF.GebruikerToevoegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadOntwikkeling_WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Gebruiker Toevoegen" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Gebruiker toevoegen"
                   Foreground="#009DE0"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,10" />

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="520" >
            <TextBlock Text="Naam"
           Foreground="#009DE0"
           FontSize="20"
           Margin="0,20,0,6"/>
            <TextBox x:Name="NaamTextBox"
         Height="48"
         FontSize="20"
         Foreground="#009DE0"/>
            <TextBlock Text="Emailadres"
                       Foreground="#009DE0"
                       FontSize="20"
                       Margin="0,0,0,6"/>
            <TextBox x:Name="EmailTextBox"
                     Height="48"
                     FontSize="20"
                     Foreground="#009DE0"
                     />

            <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Left">
                <CheckBox x:Name="IsAdminCheckBox" Content="Is admin" Foreground="#009DE0" FontSize="18" Margin="0,0,20,0"/>
                <CheckBox x:Name="IsPartnerCheckBox" Content="Is partner" Foreground="#009DE0" FontSize="18"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="SaveButton"
                    Content="Opslaan"
                    Width="200" Height="50"
                    Background="#009DE0"
                    Foreground="White"
                    BorderBrush="#009DE0"
                    FontSize="18"
                    Margin="8"/>
            <Button x:Name="CancelButton"
                    Content="Annuleren"
                    Width="200" Height="50"
                    Background="White"
                    Foreground="#009DE0"
                    BorderBrush="#009DE0"
                    FontSize="18"
                    Margin="8"/>
        </StackPanel>
    </Grid>
</Window>
