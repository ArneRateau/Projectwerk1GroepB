<Window x:Class="StadOntwikkeling_WPF.KoppelPartnersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StadOntwikkeling_WPF"
        mc:Ignorable="d"
        Title="KoppelPartnersWindow" Height="250" Width="800">
    <Grid Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<Label Content="Partners Koppelen" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="10" FontSize="25" Foreground="#009DE0"/>
		<Label Content="Rol" Grid.Row="1" Grid.Column="1" Foreground="#009DE0" FontSize="20"/>
		<ComboBox Name="ComboBox_Partners" Grid.Column="0" Grid.Row="2" Padding="8" Margin="10"/>

		<Button Click="Button_Opslaan_Click" Grid.Column="0" Grid.Row="3" Content="OPSLAAN" Padding="8" Margin="10" Background="#009DE0" Foreground="White"/>
	</Grid>
</Window>
